{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "../build-electron",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@utils/*": [
        "utils/*"
      ],
      "@const/*": [
        "const/*"
      ]
    }
  },
  "include": [
    "."
  ]
}